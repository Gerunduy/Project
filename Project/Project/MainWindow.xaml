                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                        <Image Grid.Row="4" Grid.Column="0" Name="Image19_png" Height="29" Source="Image19.png" Stretch="Fill" Width="23"/>
