                        <TextBox Grid.Row="2" Grid.Column="6" Name="textBox4" TextWrapping="Wrap" Text="0,2"/>
                        <Image Grid.Row="4" Grid.Column="4" Name="Image12_png" Height="25" Source="Image12.png" Stretch="Fill" Width="42"/>
