                        <TextBlock Grid.Row="4" Grid.Column="4" Text="Марка"/>
                        <ComboBox Grid.Row="4" Grid.Column="6" Name="combobox5" SelectionChanged="combobox5_SelectionChanged">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=name_steel}">

